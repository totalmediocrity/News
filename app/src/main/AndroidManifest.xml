<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.news" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.News" >
        <activity
            android:name=".EditNewsActivity"
            android:exported="true"
            android:label="Редактирование новости"
            android:parentActivityName=".AdminPanelActivity"/>
        <activity
            android:name=".CheckNewsActivity"
            android:exported="true"
            android:label=""
            android:parentActivityName=".ReaderActivity"/>
        <activity
            android:name=".AddNewNewsActivity"
            android:exported="true"
            android:label="Добавить новость"
            android:parentActivityName=".AdminPanelActivity"/>
        <activity
            android:name=".RegActivity"
            android:exported="true"
            android:label="Регистрация"
            android:parentActivityName=".EnterActivity" />
        <activity
            android:name=".ReaderActivity"
            android:exported="true"
            android:label="Новости"
            android:parentActivityName=".EnterActivity" />
        <activity
            android:name=".AdminPanelActivity"
            android:exported="true"
            android:label="Админ панель"
            android:parentActivityName=".EnterActivity" />
        <activity
            android:name=".EnterActivity"
            android:exported="true"
            android:label="Вход" />
        <activity
            android:name=".MainActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>